<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/F1CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="COCKPIT"
                    style="@style/F1TextAppearance.Headline.Large" />

                <View
                    android:id="@+id/connection_indicator"
                    style="@style/F1StatusIndicator"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/f1_danger" />

                <TextView
                    android:id="@+id/connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desconectado"
                    style="@style/F1ConnectionStatus" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Speed and Gear Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/F1CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp">

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VELOCIDAD"
                        style="@style/F1TelemetryLabel" />

                    <TextView
                        android:id="@+id/speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textSize="56sp"
                        style="@style/F1TelemetryValue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        style="@style/F1CardSubtitle" />

                </LinearLayout>

                <!-- Gear -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARCHA"
                        style="@style/F1TelemetryLabel" />

                    <TextView
                        android:id="@+id/gear_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="N"
                        android:textSize="56sp"
                        style="@style/F1TelemetryValue" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- RPM Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/F1CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="RPM"
                    style="@style/F1CardTitle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rpm_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/f1_white"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/rpm_progress_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:max="15000"
                        android:progress="0"
                        app:indicatorColor="@color/f1_red"
                        app:trackColor="@color/f1_dark_gray"
                        app:trackCornerRadius="4dp"
                        app:trackThickness="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Controls Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/F1CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="CONTROLES"
                    style="@style/F1CardTitle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Throttle -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACELERADOR"
                            android:textColor="@color/f1_green"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/throttle_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            app:indicatorColor="@color/f1_green"
                            app:trackColor="@color/f1_dark_gray"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                    </LinearLayout>

                    <!-- Spacer -->
                    <View
                        android:layout_width="16dp"
                        android:layout_height="1dp" />

                    <!-- Brake -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FRENO"
                            android:textColor="@color/f1_red"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/brake_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            app:indicatorColor="@color/f1_red"
                            app:trackColor="@color/f1_dark_gray"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- DRS and Engine Temp Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/F1CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- DRS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DRS"
                        style="@style/F1TelemetryLabel" />

                    <View
                        android:id="@+id/drs_indicator"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/drs_indicator_background"
                        android:backgroundTint="@color/f1_dark_gray" />

                </LinearLayout>

                <!-- Engine Temperature -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEMP. MOTOR"
                        style="@style/F1TelemetryLabel" />

                    <TextView
                        android:id="@+id/engine_temp_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0°C"
                        android:textSize="28sp"
                        style="@style/F1TelemetryValue" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tyre Temperatures Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/F1CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="TEMPERATURA NEUMÁTICOS"
                    style="@style/F1CardTitle" />

                <!-- Tyre layout with car outline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Front tyres -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FL"
                                style="@style/F1CardSubtitle" />

                            <TextView
                                android:id="@+id/tyre_temp_fl"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/tyre_background"
                                android:gravity="center"
                                android:text="0°C"
                                android:textColor="@color/f1_white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Car body spacer -->
                        <View
                            android:layout_width="100dp"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FR"
                                style="@style/F1CardSubtitle" />

                            <TextView
                                android:id="@+id/tyre_temp_fr"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/tyre_background"
                                android:gravity="center"
                                android:text="0°C"
                                android:textColor="@color/f1_white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Car body representation -->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/f1_dark_gray"
                        android:alpha="0.3" />

                    <!-- Rear tyres -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tyre_temp_rl"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:background="@drawable/tyre_background"
                                android:gravity="center"
                                android:text="0°C"
                                android:textColor="@color/f1_white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="RL"
                                style="@style/F1CardSubtitle" />

                        </LinearLayout>

                        <!-- Car body spacer -->
                        <View
                            android:layout_width="100dp"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tyre_temp_rr"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:background="@drawable/tyre_background"
                                android:gravity="center"
                                android:text="0°C"
                                android:textColor="@color/f1_white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="RR"
                                style="@style/F1CardSubtitle" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>