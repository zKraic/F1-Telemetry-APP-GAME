<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    style="@style/F1CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Valid lap indicator -->
        <View
            android:id="@+id/valid_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_indicator"
            android:backgroundTint="@color/f1_success" />

        <!-- Main content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header with track name and timestamp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/track_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Silverstone Circuit"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Silverstone Circuit" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30:25"
                    style="@style/F1CardSubtitle"
                    tools:text="14:30:25" />

            </LinearLayout>

            <!-- Lap time -->
            <TextView
                android:id="@+id/lap_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="01:23.456"
                android:textColor="@color/f1_white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="01:23.456" />

            <!-- Sector times -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Sector 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S1"
                        style="@style/F1CardSubtitle" />

                    <TextView
                        android:id="@+id/sector1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28.123"
                        android:textColor="@color/f1_sector_personal_best"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="28.123" />

                </LinearLayout>

                <!-- Sector 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S2"
                        style="@style/F1CardSubtitle" />

                    <TextView
                        android:id="@+id/sector2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32.456"
                        android:textColor="@color/f1_sector_personal_best"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="32.456" />

                </LinearLayout>

                <!-- Sector 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S3"
                        style="@style/F1CardSubtitle" />

                    <TextView
                        android:id="@+id/sector3_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.877"
                        android:textColor="@color/f1_sector_personal_best"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="22.877" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>